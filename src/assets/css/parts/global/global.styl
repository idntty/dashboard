html, body
  background: $backgroundColor
body
  font-family $Roboto
  font-weight 200
  &.is-fixed
    overflow: hidden

.page-wrapper
  margin-top: 40px

.container
  position relative
  width: 100%
  max-width 1280px
  padding 0 20px
  margin 0 auto

h1, h2
  font-weight: 200

h3, h4
  font-weight: 300

.text-center
  text-align: center

.text-right
  text-align: right

.hr
  height: 1px
  width: 100%
  background: #121820

.spacer
  height: 20px
.spacer2x
  height: 40px
.spacer4x
  height: 80px


.type-icon
  padding: 0 40px