.el-col__bottom-margin
  margin-bottom: 20px

.el-link,
.el-table thead th
  font-weight normal

.el-link.el-link--primary
  color: $primaryBlue

.el-button--primary
  background: $primaryBlue
  border-color: $primaryBlue
  font-size: 14px
  letter-spacing: 0px
  font-weight: 600
  line-height: 16px
  text-decoration: none !important
  text-transform: uppercase
  border: none
  border-radius: 2px
  cursor: pointer
  justify-content: center
  padding: 16px 32px
  height: 48px
  text-align: center
  white-space: nowrap

.el-button--primary:hover, .el-button--primary:focus
  background: $primaryBlueHovered
  border-color: $primaryBlueHovered

.el-pagination.is-background .el-pager li:not(.disabled).active
  background: $primaryBlue
  color: white

.el-pagination.is-background .el-pager li:not(.disabled):not(.active):hover
  color: $primaryBlueHovered

.el-card,
.el-table,
.el-table tr
  background: $backgroundColor

.el-loading-mask
  background: $backgroundColorWithOpacity
  // background: rgba(30, 30, 47, 0.7)

.el-popover,
.el-pagination.is-background .btn-prev,
.el-pagination.is-background .btn-next,
.el-pagination.is-background .el-pager li,
.el-input__inner,
.el-card__header,
.el-table th
  background: $backgroundAccentColor

.el-table--enable-row-hover .el-table__body tr:hover > td
  background-color: $backgroundAccentColor

.el-input__inner:focus,
.el-input__inner:hover
  border-color: $backgroundAccentColor

.el-input__inner::placeholder
  opacity: 0.5

.el-pagination.is-background .btn-prev:disabled,
.el-pagination.is-background .btn-next:disabled
  color: $backgroundColorWithOpacity

.el-pagination.is-background .btn-prev:hover,
.el-pagination.is-background .btn-next:hover
  color: $primaryBlueHovered